[help]
  autocorrect = 1
[url "git@github.com:"]
  pushinsteadof = https://github.com/
[core]
  editor = nvim
  excludesfile = ~/.gitignore_global
  whitespace = fix
  ignorecase = false
[color]
  ui = true
[http]
  sslVerify = false
[alias]
  st = status
  co = checkout
  so = remote show origin
  wc = whatchanged
  ci = commit
  fu = commit --fixup HEAD
  br = branch
  cp = cherry-pick
  rb = rebase
  current = rev-parse --abbrev-ref HEAD
  ri = "!f() { \
        if [ -n \"$1\" ]; then \
          base=\"$1\"; \
        else \
          base=$(git rev-parse --abbrev-ref --symbolic-full-name @{u} 2>/dev/null || echo origin/main); \
        fi; \
        start=$(git merge-base --fork-point \"$base\" HEAD) && \
        exec git rebase -i \"$start\"; \
        }; f"
  ; fixup = "!f() { git commit --fixup \"$1\"; git rebase --autosquash --autostash \"$1\"~; tig; }; f"
  po = "!f() {\
        b=`git rev-parse --abbrev-ref HEAD`;\
        git push origin ${b};\
        }; f"
  pof = "!f() {\
        b=`git rev-parse --abbrev-ref HEAD`;\
        git push origin ${b} --force-with-lease;\
        }; f"
  pllo = "!f() {\
        b=`git rev-parse --abbrev-ref HEAD`;\
        git pull origin ${b};\
        }; f"
[push]
  default = current
[commit]
  template = ~/.gitmessage
  gpgsign = true
[gpg]
  format = ssh
[gpg "ssh"]
  program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
[merge]
  ff = true
[pull]
  rebase = merges
[branch]
  sort = -authordate
[rebase]
  autosquash = true
[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta
[delta]
  plus-style = "syntax #012800"
  minus-style = "syntax #340001"
  syntax-theme = Monokai Extended
  navigate = true
  line-numbers = true
  side-by-side = true
[interactive]
  diffFilter = delta --color-only
