{
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Fetch(https://*)",
      "Read(~/.config/fish/**)",
      "Read(./src/**)",
      "Edit(./src/**)",
      "Bash(true)",
      "Bash(git:*)",
      "Bash(git config:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(rm:*)",
      "Bash(grep:*)",
      "Bash(pkill:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(jq:*)",
      "Bash(npx knip)",
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Bash(pnpm add:*)",
      "Bash(pnpm remove:*)",
      "Bash(pnpm dev:*)",
      "Bash(pnpm fmt:*)",
      "Bash(pnpm lint:*)",
      "Bash(pnpm test:*)",
      "Bash(pnpm check:*)",
      "Bash(pnpm build:*)",
      "Bash(pnpm knip:*)"
    ],
    "deny": [
      "Bash(rm -rf *)",
      "Bash(sudo:*)",
      "Bash(npm publish:*)"
    ]
  },
  "preferredNotifChannel": "terminal_bell",
  "theme": "dark-daltonized",
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "BASH_DEFAULT_TIMEOUT_MS": "300000",
    "BASH_MAX_TIMEOUT_MS": "1200000"
  }
}
